<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/employeesFragment">

    <fragment
        android:id="@+id/employeesFragment"
        android:name="com.gavincdunne.employeedirectory.ui.fragment.EmployeesFragment"
        android:label="Employee Directory"
        tools:layout="@layout/fragment_employees">
        <action
            android:id="@+id/action_employeesFragment_to_employeeDetailFragment"
            app:destination="@id/employeeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/employeeDetailFragment"
        android:name="com.gavincdunne.employeedirectory.ui.fragment.EmployeeDetailFragment"
        android:label="{name}"
        tools:layout="@layout/fragment_employee_detail">
        <argument
            android:name="employee"
            app:argType="com.gavincdunne.employeedirectory.data.entity.Employee" />
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
</navigation>